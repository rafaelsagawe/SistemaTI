@model SistemaTI.Models.Equipamento

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center">Adicionar novo equipamento</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NuSerie" class="control-label"></label>
                <input asp-for="NuSerie" class="form-control" />
                <span asp-validation-for="NuSerie" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="NuPatrimonio" class="control-label"></label>
                <input asp-for="NuPatrimonio" class="form-control" />
                <span asp-validation-for="NuPatrimonio" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="EquipValor" class="control-label"></label>
                <input asp-for="EquipValor" class="form-control" />
                <span asp-validation-for="EquipValor" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Situacao" class="control-label"></label>
                <input asp-for="Situacao" class="form-control" />
                <span asp-validation-for="Situacao" class="text-danger"></span>
            </div>
            <!--
    <div class="form-group">
        <label asp-for="DataMovimantacao" class="control-label"></label>
        <input asp-for="DataMovimantacao" class="form-control" />
        <span asp-validation-for="DataMovimantacao" class="text-danger"></span>
    </div>
        -->
            <div class="form-group">
                <label asp-for="LocalId" class="control-label"></label>
                <select id="local" asp-for="LocalId" class="form-control" asp-items="ViewBag.LocalId"></select>
            </div>
            <div class="form-group">
                <label asp-for="EspecificacaoId" class="control-label"></label>
                <select id="Especificacao" asp-for="EspecificacaoId" class="form-control" asp-items="ViewBag.EspecificacaoId"></select>
            </div>

            <div class="form-group">
                <label asp-for="ProcessoId" class="control-label"></label>
                <select asp-for="ProcessoId" class="form-control" asp-items="ViewBag.ProcessoId"></select>
            </div>

            <div class="form-group">
                <label asp-for="ItemProcessoID" class="control-label"></label>
                <select asp-for="ItemProcessoID" class="form-control" asp-items="ViewBag.ItemProcessoID"></select>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar a Listagem</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script type="text/javascript">
        $(function () {
            $("#local").chosen();
        })
    </script>

    <script type="text/javascript">
        $(function () {
            $("#Especificacao").chosen();
        })
    </script>
}
