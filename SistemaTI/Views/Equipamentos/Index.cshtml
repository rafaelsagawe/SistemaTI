@model IEnumerable<SistemaTI.Models.Equipamento>

@{
    ViewData["Title"] = "Equipamentos";
}

<!--

Foram subistituidos os itens Local e tipo pela Descrição
-->

<h1>Index</h1>

<p>
    <a asp-action="Create">Adicionar Equipamento</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EquipDescricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NuSerie)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NuPatrimonio)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Modelo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EquipOrigem)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Situacao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.EquipDescricao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NuSerie)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NuPatrimonio)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Modelo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EquipOrigem)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Situacao)
                </td>
                <td class="btn-group">
                    <a asp-action="Edit" asp-route-id="@item.IdEquipamento" class="btn btn-outline-primary">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.IdEquipamento" class="btn btn-outline-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.IdEquipamento" class="btn btn-outline-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
