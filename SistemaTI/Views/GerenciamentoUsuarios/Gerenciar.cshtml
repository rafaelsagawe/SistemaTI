@model List<GerenciamentoRegraUsuarioViewModel>
@{
    ViewData["Title"] = "Manage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<form method="post">
    <div class="card">
        <div class="card-header">
            <h2>Gerenciar regras  do Usuário</h2>
            Adicionar ou remover regras de / @ViewBag.UserName.
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model[i].RegraId" />
                    <input type="hidden" asp-for="@Model[i].RegraNome" />
                    <input asp-for="@Model[i].Selecao" class="form-check-input" />
                    <label class="form-check-label" asp-for="@Model[i].Selecao">
                        @Model[i].RegraNome
                    </label>
                </div>
            }
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="card-footer">

            <input type="submit" value="Update" class="btn btn-primary"
                   style="width:auto" />

            <a asp-action="Index" class="btn btn-primary" style="width:auto">Cancel</a>
        </div>
    </div>
</form>