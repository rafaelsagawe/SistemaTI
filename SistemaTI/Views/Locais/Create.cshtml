                </select>
                <span asp-validation-for="localTipo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NunProtocolo" class="control-label"></label>
                <input asp-for="NunProtocolo" class="form-control" />
