@model IEnumerable<SistemaTI.Models.Local>

@{
    ViewData["Title"] = "Localizações";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Adicionar Localização</a>
</p>
<table class="table table-striped text-uppercase" id="LocaisDataTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Endereco)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Endereco)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telefone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td class="btn btn-group">
                    <a asp-action="Edit" asp-route-id="@item.idLocal" class="btn btn-outline-primary">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.idLocal" class="btn btn-outline-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.idLocal" class="btn btn-outline-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>


@section Scripts{

    <script>
    $(document).ready(function () {
        $('#LocaisDataTable').DataTable({
            "language": {
                "url": "http://cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Portuguese-Brasil.json"
            }
        });
    });
    </script>
}
