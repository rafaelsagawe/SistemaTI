@model IEnumerable<SistemaTI.Models.Recebido>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista de documentos recebidos</h1>

<p>
    <a asp-action="Create" class="btn btn-outline-primary">Nova entrada</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TipoDocumento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataRecebimento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.origem)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Assunto)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Equipamento)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TipoDocumento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataRecebimento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.origem)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Assunto)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Equipamento)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdDocumento">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdDocumento">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdDocumento">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
