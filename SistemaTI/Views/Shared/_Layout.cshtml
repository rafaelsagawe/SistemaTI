<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sistema da TI</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    

    <!-- Links adicionais -->
    <!-- datatable -->
    <link rel="stylesheet" href="~/css/jquery.dataTables.min.css" />

    <!-- Dropdown com textbox -->
    <link href="~/css/chosen.css" rel="stylesheet" />

    <!-- Dropdown com multiselect-->
    <link rel="stylesheet" href="~/css/bootstrap-multiselect.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-light border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">SistemaTI</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial" />
                    <ul class="navbar-nav flex-grow-1">

                        <!-- Área de usuários autenticados -->
                        @if (User.Identity.IsAuthenticated)
                        {

                            <!-- locais são as Escolas, Setores e outros locais atendidos pelo setor -->
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Locais" asp-action="Index">Locais</a>
                            </li>

                            <!-- Dados sobre os equipamentos sob a respansabilidade da TI-->
                            <!-- Inicio do dropdown de equipamentos -->
                            <li class="dropdown">
                                <button class="btn dropdown-toggle" type="button" id="dropdownEquipamentos" data-toggle="dropdown">Equipamentos</button>
                                <div class="dropdown-menu" aria-labelledby="dropdownEquipamentos">

                                    <a class="nav-link text-dark dropdown-item" asp-area="" asp-controller="Equipamentos" asp-action="Index">Equipamentos</a>

                                    <a asp-controller="Equipamentos" asp-action="Create" class="nav-link text-dark dropdown-item">Adicionar Equipamento</a>

                                    <div class="dropdown-divider"></div>
                                    <a asp-controller="ModelosFabicantes" asp-action="Index" class="nav-link text-dark dropdown-item">Modelo e Fabicante</a>

                                    <a asp-controller="Suprimentos" asp-action="Index" class="nav-link text-dark dropdown-item">Suprimentos</a>

                                    <a asp-controller="WiFis" asp-action="Index" class="nav-link text-dark dropdown-item">WiFi</a>

                                    <a asp-controller="Equipamentos" asp-action="Estatisticas" class="nav-link text-dark dropdown-item">Teste de Relatorios</a>
                                </div>
                            </li>
                            <!-- Final do dropdown de equipamentos -->

                            <!-- Solicitações feitas para o setor -->
                            <li class="dropdown">
                                <button class="btn dropdown-toggle" type="button" id="dropdownDocumentos" data-toggle="dropdown">Documentos</button>
                                <div class="dropdown-menu" aria-labelledby="dropdownDocumentos">

                                    <a class="nav-link text-dark" asp-area="" asp-controller="Recebidos" asp-action="Index">Recebidos</a>

                                    <a class="nav-link text-dark" asp-area="" asp-controller="Enviados" asp-action="Index">Enviados</a>

                                </div>
                            </li>


                            <!-- Tarefas de cada membro-->
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Tarefas" asp-action="Index">Tarefas</a>
                            </li>

                            <!-- Sistemas geranciados dos TI-->
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Sistemas" asp-action="Index">Sistemas</a>
                            </li>


                        }

                        <!-- Links baseados em regras-->
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="Index">Admin</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Gerente" asp-action="Index">Gerente</a>
                        </li>


                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Role" asp-action="Index">Regras</a>
                        </li>


                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <!--container-fluid para almentar a area util das páginas-->
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - SistemaTI - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <!-- Scripts adcionais -->
    <!-- Datatable-->
    <script src="~/js/jquery.dataTables.min.js"></script>

    <!-- multiselect -->
    <script src="~/js/bootstrap-multiselect.js"></script>

    <!-- Dropdown com textbox -->
    <script src="~/js/chosen.jquery.min.js"></script>



    <script src="https://cdn.tiny.cloud/1/no-api-key/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
