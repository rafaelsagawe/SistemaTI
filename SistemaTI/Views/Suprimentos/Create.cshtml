@model SistemaTI.Models.Suprimento

<h4>Suprimento</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ModeloEquipamento" class="control-label"></label>
                <select asp-for="ModeloEquipamento" class="form-control" asp-items="ViewBag.Descricao">
                    
                    <option value=""> -- Modelo do Equipamento -- </option>
                </select>
                <span asp-validation-for="ModeloEquipamento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoSuprimento" class="control-label"></label>
                <select asp-for="TipoSuprimento" class="form-control" >
                    <option value=""> -- Selecione o tipo -- </option>
                    <optgroup label="Impressora">
                        <option>Toner</option>
                        <option>Cilindro</option>
                    </optgroup>
                    <optgroup label="Computador">
                        <option>Mouse</option>
                        <option>Teclado</option>
                        <option>Memoria</option>
                        <option>HD</option>
                    </optgroup>
                </select>
                <span asp-validation-for="TipoSuprimento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QtdSuprimento" class="control-label"></label>
                <input asp-for="QtdSuprimento" class="form-control" />
                <span asp-validation-for="QtdSuprimento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
